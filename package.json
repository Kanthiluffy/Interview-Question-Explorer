{
  "name": "hackathon",
  "version": "1.0.0",
  "main": "index.js",
  "scripts": {
    "install": "npm install --prefix backend && npm install --prefix frontend",
    "build": "npm install --prefix backend && npm install --prefix frontend && npm run build --prefix frontend",
    "start": "npm run start --prefix backend",
    "dev": "nodemon backend/server.js",
    "dev:frontend": "npm run start --prefix frontend",
    "dev:backend": "nodemon backend/server.js",
    "dev:both": "concurrently \"npm run dev:backend\" \"npm run dev:frontend\"",
    "clean": "rimraf frontend/build backend/node_modules frontend/node_modules",
    "deploy:build": "npm cache clean --force && npm install --prefix backend && npm install --prefix frontend && npm run build --prefix frontend",
    "deploy:start": "cd backend && npm start"
  },
  "type": "module",
  "keywords": [],
  "author": "",
  "license": "ISC",
  "description": "",
  "dependencies": {
    "axios": "^1.9.0",
    "cors": "^2.8.5",
    "dotenv": "^16.5.0",
    "express": "^4.19.2",
    "express-validator": "^7.2.1",
    "mongoose": "^8.15.1"
  },
  "devDependencies": {
    "concurrently": "^9.1.0",
    "nodemon": "^3.1.10",
    "rimraf": "^6.0.1"
  }
}
